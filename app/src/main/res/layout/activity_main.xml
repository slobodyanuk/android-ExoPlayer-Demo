<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:seek="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.soundlover.exoplayertest.MainActivity">

    <com.soundlover.exoplayertest.seekbar.CircularSeekBar
        android:id="@+id/circularSeekBar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        seek:max="100"
        seek:seekArcWidth="5"
        seek:progress="0"
        seek:startAngle="190"
        seek:sweepAngle="160"/>

    <com.soundlover.exoplayertest.seekbar.WaveView
        android:layout_width="match_parent"
        android:clickable="true"
        android:id="@+id/wave"
        seek:waveSrc="@drawable/soundwave"
        android:background="@android:color/transparent"
        android:layout_height="30dp"
        android:layout_marginLeft="80dp"
        seek:max="100"
        seek:progress="0"
        android:layout_marginRight="80dp"
        android:layout_marginTop="-95dp"
        android:layout_below="@+id/circularSeekBar"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="-50dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:minHeight="25dp"
        android:weightSum="5"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circularSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:text="00:00"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_current_position"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_media_previous"
            android:id="@+id/prev"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/play"
            android:src="@android:drawable/ic_media_play"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/next"
            android:src="@android:drawable/ic_media_next"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:text="00:00"
            android:gravity="center"
            android:id="@+id/tv_duration"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
